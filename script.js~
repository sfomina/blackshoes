var list = document.getElementById('thelist');
var button = document.getElementById('b');
var header = document.getElementById('h');

var adder = function(e){
  list.appendChild('<li> item 8 </li>');
}

var headchanger = function(e){
  header.innerHTML = e.innerHTML;
}


var changeBack = function(e) {
    header.innerHTML = "Hello Worlld!"
}

button.addEventListener('click', adder);
list.addEventListener('mouseenter', headchanger)
button.addEventListener('mouseleave;

