var myval = 6;

var adderC = function(e){
    var list = document.getElementById('thelist');
    list.appendChild('<li> item 8 </li>');
}

var adder = function(){
    var button = document.getElementById('b');
    button.addEventListener('click', adderC);   
}


var headChangerC = function(e){
    var header = document.getElementById('h');
    header.innerHTML = e.innerHTML;
}

var headChanger = function() {
    var list = document.getElementById('thelist');
    list.addEventListener('mouseenter', headchangerC);
}


var changeBackC = function(e) {
    var header = document.getElementById('h');
    header.innerHTML = "Hello World!"
}


var changeBack = function(){
    var list = document.getElementById('thelist');
    list.addEventListener('mouseleave', changeBackC);
    
}


